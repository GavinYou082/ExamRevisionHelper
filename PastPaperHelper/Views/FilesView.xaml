<Grid
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PastPaperHelper.Views"
      xmlns:vm="clr-namespace:PastPaperHelper.ViewModels"
      xmlns:models="clr-namespace:PastPaperHelper.Models"
      xmlns:Converters="clr-namespace:PastPaperHelper.Converters" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="PastPaperHelper.Views.FilesView"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800">
    <Grid.Resources>
        <Converters:ShortCurriculumNameConverter x:Key="ShortCurriculumNameConverter"/>
        <Converters:IsMouseOverToVisibilityConverter x:Key="IsMouseOverToVisibilityConverter"/>
        <Converters:MessageVisibilityConverter x:Key="MessageVisibilityConverter"/>
    </Grid.Resources>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="270"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <Grid Grid.Column="0" Margin="10">
        <ListBox x:Name="SubjectList" ItemsSource="{x:Static vm:SettingsViewModel.SubjectsSubscripted}" Margin="0,40,0,0" >
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type models:SubjectSource}">
                    <Border x:Name="border1" BorderThickness="0 0 0 1" BorderBrush="{DynamicResource MaterialDesignDivider}" Margin="-5" Background="Transparent">
                        <Grid Width="250" Margin="0,0,0,5">
                            <Ellipse Width="32" Height="32" HorizontalAlignment="Left" materialDesign:ShadowAssist.ShadowDepth="Depth2" Fill="{DynamicResource PrimaryHueLightBrush}"/>
                            <TextBlock Text="{Binding Curriculum, Converter={StaticResource ShortCurriculumNameConverter}}" Margin="8,8,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBlock Text="{Binding SyllabusCode, StringFormat=Syllabus Code: \{0\}}" FontStyle="Italic" Margin="40,16,0,0" VerticalAlignment="Top"/>
                            <StackPanel Orientation="Horizontal" Margin="32,0,0,0" VerticalAlignment="Top" Height="18">
                                <TextBlock Text="{Binding Curriculum}" FontWeight="Bold" Margin="8,0,0,0"/>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="6,0,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock Text="Add your first subject..." FontStyle="Italic" Visibility="{Binding Count, Source={x:Static vm:SettingsViewModel.SubjectsSubscripted}, Converter={StaticResource MessageVisibilityConverter}, Mode=OneWay}" HorizontalAlignment="Center" Margin="66,40,66,0"/>
        <TextBlock Text="Subjects" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Line VerticalAlignment="Top" Stroke="Gray" StrokeThickness="2" Margin="0,30,0,0" X1="0" X2="1" Stretch="Fill"/>
    </Grid>
    <TextBlock Text="{Binding  ExamSeries}" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1" Margin="10"/>
    <Line VerticalAlignment="Top" Margin="10,40,10,0" Grid.Column="1" Stroke="Gray" StrokeThickness="2" X1="0" X2="1" Stretch="Fill"/>
    <DataGrid Grid.Column="1" Margin="10,50,10,10" HeadersVisibility="All" ItemsSource="{Binding ExamYears}" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" CanUserResizeColumns="False" CanUserReorderColumns="False" CanUserResizeRows="False">
        <DataGrid.Columns>
            <DataGridTemplateColumn Header="Spring" IsReadOnly="True" Width="*"/>
            <DataGridTemplateColumn Header="Summer" IsReadOnly="True" Width="*"/>
            <DataGridTemplateColumn Header="Winter" IsReadOnly="True" Width="*"/>
        </DataGrid.Columns>
        <DataGrid.RowHeaderTemplate>
            <DataTemplate>
                <TextBlock Margin="5,10" Text="{Binding DataContext.Year, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type DataGridRowHeader}}}">
                    <TextBlock.LayoutTransform>
                        <RotateTransform Angle="-90"/>
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </DataTemplate>
        </DataGrid.RowHeaderTemplate>
    </DataGrid>
</Grid>
